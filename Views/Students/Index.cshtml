@model System.Data.DataTable;
@using System.Data;

<a asp-action="AddEdit" class="btn btn-outline-info">Add New Student</a>

<table class="table table-bordered">
    <tr>
        <th>Student ID</th>
        <th>Student Name</th>
        <th>Student Age</th>
        <th>Student Mobile</th>
        <th>Admin Id</th>
        <th>Actions</th>
    </tr>
    @foreach(DataRow row in Model.Rows)
    {
        <tr>
            <td>@row["StudentID"]</td>
            <td>@row["StudentName"]</td>
            <td>@row["StudentAge"]</td>
            <td>@row["StudentMob"]</td>
            <td>@row["AdminID"]</td>
            <td>
                <a asp-action="AddEdit" asp-route-StudentID="@row["StudentID"]" class="btn btn-outline-primary">Edit</a>
                <a asp-action="Delete" asp-route-StudentID="@row["StudentID"]" class="btn btn-outline-danger"
                   onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
            </td>
        </tr>
    }
</table>

<button onclick="window.print()" class="btn btn-outline-secondary">
    Print Report
</button>


